{
  "packageManager": "bun@1.1.43",
  "type": "module",
  "workspaces": [
    "plugin",
    "server"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:docs": "vitepress dev docs",
    "dev:server": "bun run --cwd server --watch src/main.ts",
    "check": "bun run --cwd plugin build && bun tsc -b && bun --cwd plugin check --binDir ../node_modules/.bin && bun --cwd server check --binDir ../node_modules/.bin",
    "docs:dev": "",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "vitepress-knowledge": "workspace:*"
  },
  "devDependencies": {
    "@aklinker1/check": "^1.4.5",
    "@types/bun": "latest",
    "npm-run-all": "^4.1.5",
    "oxlint": "^0.15.5",
    "prettier": "^3.4.2",
    "typescript": "^5.0.0"
  }
}
